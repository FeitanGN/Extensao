<Orcamento>:
    BoxLayout:
        padding: root.width * 0.20, root.height * 0.1
        Spinner:
            id: material_spinner
            text: 'Selecione o Material'
            values: 'PET', 'PVC'
        Spinner:
            id: espessura_spinner
            text: 'Selecione a Espessura'
            values: '0.3', '0.6'
        TextInput:
            id: largura_input
            hint_text: 'Largura (cm)'
            multiline: False
            input_filter: 'float'
        TextInput:
            id: comprimento_input
            hint_text: 'Comprimento (cm)'
            multiline: False
            input_filter: 'float'
        TextInput:
            id: quantidade_input
            hint_text: 'Quantidade'
            multiline: False
            input_filter: 'int'
        BotaoMenu:
            text: 'Gerar Or√ßamento'
            on_press: app.gerar_orcamento
            bold: True
            font_size: 20
        BotaoMenu:
            text: 'teste'
        Label:
            id: result_label
            text: ''
<BotaoMenu@ButtonBehavior+Label>:
    canvas:
        Color:
            rgba: 1, 0.8, 0.1, 0.6
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]
    